<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.TableMenuCellcom/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd">


        <ImageView
            android:id="@+id/list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/chat" />

        <TextView android:id="@+id/list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/list_icon"
            android:layout_marginLeft="15dp"
            android:text="锁屏任务"
            android:textColor="@color/textcolor_gray"
            android:textSize="12sp" />


    <ImageView
        android:id="@+id/list_image_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/right_arrows" />

    <View
        android:id="@+id/list_notice"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@id/list_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="2dp"
        android:background="@drawable/spot"
        android:textColor="@android:color/white"
        android:textSize="9sp" />
</merge>